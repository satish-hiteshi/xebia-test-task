{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "importHelpers": true,
    "baseUrl": "./",
    "incremental": true
  },
  "include": [
    "./src/**/*",
    "jest.setup.ts",
    "jest.config.ts",
    ".eslintrc"
  ],
  "exclude": [
    "node_modules"
  ]
}
